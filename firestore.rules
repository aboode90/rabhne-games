rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Users can read and write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read all user documents
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Prevent users from directly modifying points
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        !('points' in request.resource.data.diff(resource.data));
    }
    
    // Games collection
    match /games/{gameId} {
      // Anyone can read games
      allow read: if true;
      
      // Only admins can write games
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can only read their own transactions
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      
      // Only system (Cloud Functions) can create transactions
      allow create: if false;
      
      // Admins can read all transactions
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Withdraw requests collection
    match /withdraw_requests/{requestId} {
      // Users can read their own withdraw requests
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      
      // Users can create their own withdraw requests (via Cloud Function only)
      allow create: if false;
      
      // Admins can read and update all withdraw requests
      allow read, update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Game sessions collection
    match /game_sessions/{sessionId} {
      // Users can read and write their own sessions
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      
      // Admins can read all sessions
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Admin settings collection
    match /admin_settings/{settingId} {
      // Only admins can read and write settings
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}